# Environment Variables Template for GHL LangGraph Agent
# Copy this file to .env and fill in your actual values

# Required: OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Required: GoHighLevel Configuration
# Get these from your GHL account settings
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id_here
GHL_CALENDAR_ID=your_ghl_calendar_id_here

# Optional: Meta Configuration (for Facebook/Instagram lead ads)
# Get these from Meta Business Manager
META_VERIFY_TOKEN=your_meta_verify_token_here
META_APP_SECRET=your_meta_app_secret_here

# Optional: LangSmith Configuration (for enhanced tracing)
# Get your API key from: https://smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=ghl-customer-agent

# Optional: Timezone Configuration
# Use standard timezone format (e.g., America/New_York, Europe/London)
TIMEZONE=America/New_York

# Optional: Server Configuration (for local development)
SERVER_PORT=8000
SERVER_HOST=0.0.0.0

# Optional: Agent Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo
CONVERSATION_TIMEOUT_MINUTES=30
MAX_RETRIES=3